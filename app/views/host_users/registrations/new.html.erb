<h2 class="text-center">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal"}) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email, class: 'col-sm-2 col-sm-offset-1 control-label' %>
    <div class="col-sm-7">
      <%= f.email_field :email, class: "form-control",  autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: 'col-sm-2 col-sm-offset-1 control-label'  %>
    <div class="col-sm-7">
      <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: 'col-sm-2 col-sm-offset-1 control-label' %>
    <div class="col-sm-7">
      <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-7">
      <%= f.submit "Sign up", class: 'btn btn-default' %>
    </div>
  </div>
<% end %>

<%= render "host_users/shared/links" %>
