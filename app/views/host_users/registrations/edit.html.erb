<h2 class="text-center">Edit User Details</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-horizontal"}) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email, class: 'col-sm-2 col-sm-offset-1 control-label' %>
    <div class="col-sm-7">
      <%= f.email_field :email, class: "form-control", autofocus: true %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :password, class: 'col-sm-2 col-sm-offset-1 control-label' %>
    <div class="col-sm-7">
      <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
      <span class="help-block">Leave blank if you don't want to change your password.</span>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: 'col-sm-2 col-sm-offset-1 control-label' %>
    <div class="col-sm-7">
      <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :current_password, class: 'col-sm-2 col-sm-offset-1 control-label' %>
    <div class="col-sm-7">
      <%= f.password_field :current_password, class: "form-control", autocomplete: "off" %>
      <span class="help-block">We need your current password to confirm your changes.</span>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-7">
      <%= f.submit "Update", class: 'btn btn-default' %>
    </div>
  </div>
<% end %>

<h3 class="text-center">Cancel my account</h3>

<p class="col-sm-offset-3 col-sm-7">Unhappy?</p>
<div class="col-sm-offset-3 col-sm-7">
    <%= button_to "Cancel my account", registration_path(resource_name), class: 'btn btn-default',  data: { confirm: "Are you sure?" }, method: :delete %>
</div>

<%= link_to "Back", :back, class: "col-sm-offset-3 col-sm-7" %>
