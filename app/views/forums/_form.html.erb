<%= form_for(@forum, html: { class: "form-horizontal"}) do |f| %>
  <% if @forum.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@forum.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @forum.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :forum_shortname, class: 'col-sm-2 col-sm-offset-1 control-label' %>
    <div class="col-sm-7">
      <%= f.text_field :forum_shortname, class: "form-control", autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :root_domain, class: 'col-sm-2 col-sm-offset-1 control-label' %>
    <div class="col-sm-7">
      <%= f.text_field :root_domain, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-7">
      <%= f.submit "Submit", class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
